---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="min-h-screen flex flex-col justify-center items-center bg-gradient-to-r from-yellow-600 via-orange-600 to-amber-700 text-white px-4">
    <h1 class="text-5xl font-bold mb-4 animate-pulse">Coming Soon</h1>
    <p class="text-lg mb-6 max-w-lg text-center">
      We're working on something awesome. Stay tuned!
    </p>
    <a 
      href="https://discord.gg/PN4KDGX2" 
      class="inline-block px-6 py-2 text-amber-800 bg-white rounded-full font-semibold shadow hover:bg-amber-100 transition-colors"
    >
      Discord
    </a>
  </div>
</Layout>
